<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorGray"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="150dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoID"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/vegetable"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="45dp" />
</LinearLayout>

<LinearLayout

    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="250dp"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UP TO 69% OFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/off_color"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="130dp"/>


        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery and Staples"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="130dp"/>


        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pulse,Atta other Flours"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/card_color"
            android:layout_marginLeft="130dp"/>


</LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="310dp"
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="150dp">

            <ImageView

                android:background="@drawable/ic_down_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>